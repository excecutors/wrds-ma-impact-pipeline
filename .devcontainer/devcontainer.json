{
  "name": "M&A Data Pipeline Environment",
  
  // use the existing docker-compose file
  "dockerComposeFile": "docker-compose.yml",
  
  // tell VS Code to attach to the 'app' service
  "service": "app",
  
  // tell VS Code which folder to open once attached
  "workspaceFolder": "/workspace",
  
  // automatically install recommended VS Code extensions for all team members
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",         // python
        "ms-python.pylance",        // intelligent code completion
        "ms-azuretools.vscode-docker" // Docker extension
      ]
    }
  }
}